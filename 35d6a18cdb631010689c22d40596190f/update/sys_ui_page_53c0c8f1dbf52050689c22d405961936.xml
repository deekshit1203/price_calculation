        <category>general</category>
        <client_script><![CDATA[	var vcount = '${JS:sysparm_validCount}';
	var rcount = '${JS:sysparm_reqCount}';
		
	if(vcount) {

	//Hide the OverLay
		$('trigger_progress').hide();
		
	//Display Message
		var result = "Recalculation was successfully triggered for " +vcount+ " Customers out of "+rcount+" requested Customers. For status of recalculation please open the CI Tree SP Processing Queue.";
		 alert(result);
		 closeWindow();
	}
 
function closeWindow(){
	GlideModal.get().destroy();
	reloadWindow(window);
}]]></client_script>
        <description>Triggers the recalculation for CI Tree SP Enabled Customer.</description>
        <direct>false</direct>
        <endpoint>x_atpu_rtsm_TriggerCITreeSPRecalculateCustomersPage.do</endpoint>
        <html><![CDATA[<?xml version="1.0" encoding="utf-8" ?>
