        <client_script><![CDATA[function doPostInstall() {
	var username = gel("username").value;
	var password = gel("password").value;
	
	if(!username) {
		showError('Username is empty');
		return;
	}
	
	if(!password) {
		showError('Password is empty');
		return;
	}
		
	var ga =  new GlideAjax('AJAXInstaller');
	ga.addParam('sysparm_name','doPostInstallation');
	ga.addParam('sysparm_user_name', username);
	ga.addParam('sysparm_user_password', password);	
	ga.getXML(parseResponse);	
	
	return;
}

function parseResponse(response) {
	var answer = response.responseXML.documentElement.getAttribute('answer');
	if (answer) {
		alert('Post Instalaltion DONE');
	} else {
		alert('Post Instalaltion FAILED');	
	}
}]]></client_script>
